{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "build",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "es6",
      "dom"
    ],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**.ts"
  ],
  "exclude": [
    "./client"
  ]
}
